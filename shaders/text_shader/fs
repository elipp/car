#version 150 core

uniform sampler2D texture_color;

in vec2 TexCoord_FS_in;
in vec4 Color_FS_in;

out vec4 out_fragcolor;

//////// #define INVERT_V 1

void main(void) {

	#ifdef INVERT_V
	vec2 texcoord = vec2(TexCoord_FS_in.x, 1-TexCoord_FS_in.y);
	#else
	vec2 texcoord = TexCoord_FS_in;
	#endif
	vec4 col = texture2D(texture_color, texcoord);
	
	out_fragcolor = vec4(vec3(Color_FS_in), col.g);

}


