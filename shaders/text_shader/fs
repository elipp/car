#version 150 core

in vec2 TexCoord_FS_in;

uniform sampler2D texture_color;
uniform vec4 text_color;

out vec4 out_fragcolor;

void main(void) {

	//vec2 tc_inverted_v = vec2(TexCoord_FS_in.x, 1-TexCoord_FS_in.y);
	vec4 col = texture2D(texture_color, TexCoord_FS_in);
	
	if (col.g != 1.0) { // see the dina_all texture for reference :P
		discard;
	}
	else {
		out_fragcolor = text_color;
	}

}


