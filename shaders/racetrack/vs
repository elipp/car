#version 150 core

in vec3 Position_VS_in;
in vec3 Normal_VS_in;
in vec2 TexCoord_VS_in;

uniform mat4 ModelView;
uniform mat4 Projection;

out vec3 WorldPos_FS_in;	
out vec3 Normal_FS_in;
out vec2 TexCoord_FS_in;

void main(void)
{
	vec3 normal_normalized = normalize(Normal_VS_in); // probably is normalized already

	gl_Position = Projection*ModelView*vec4(Position_VS_in, 1.0);
	WorldPos_FS_in = (ModelView*vec4(Position_VS_in, 1.0)).xyz;
	Normal_FS_in = normal_normalized;
	TexCoord_FS_in = TexCoord_VS_in;
}

